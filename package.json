{
  "name": "jobforge",
  "version": "0.1.0",
  "private": true,
  "description": "Professional job application tracking and management platform",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:observability": "pnpm --filter @jobforge/observability test",
    "contract-tests": "pnpm --filter @jobforge/shared contract-tests",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "verify:fast": "pnpm run format:check && pnpm run lint && pnpm run typecheck",
    "verify:full": "pnpm run verify:fast && pnpm run test && pnpm run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "jobforge:doctor": "tsx scripts/jobforge-doctor.ts",
    "jobforge:impact:show": "tsx scripts/jobforge-impact.ts show",
    "jobforge:impact:export": "tsx scripts/jobforge-impact.ts export",
    "jobforge:impact:compare": "tsx scripts/jobforge-impact.ts compare",
    "jobforge:daily": "tsx scripts/jobforge-daily.ts",
    "policy:ci-check": "tsx scripts/policy-ci-check.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.8.1",
    "typescript": "^5.3.3"
  }
}
