{
  "name": "@jobforge/worker-py",
  "version": "0.1.0",
  "private": true,
  "description": "Python worker for JobForge",
  "scripts": {
    "test": "pytest tests/ -v",
    "lint": "ruff check src/ tests/",
    "typecheck": "mypy src/",
    "format": "ruff format src/ tests/",
    "format:check": "ruff format --check src/ tests/",
    "verify:fast": "npm run format:check && npm run lint && npm run typecheck",
    "verify:full": "npm run verify:fast && npm run test",
    "clean": "rimraf build dist *.egg-info __pycache__ .pytest_cache .mypy_cache .ruff_cache"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  }
}
