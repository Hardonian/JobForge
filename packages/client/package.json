{
  "name": "@jobforge/client",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript client for JobForge runnerless execution plane",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./transports/direct": {
      "types": "./src/transports/direct.ts",
      "default": "./dist/transports/direct.js"
    },
    "./transports/http": {
      "types": "./src/transports/http.ts",
      "default": "./dist/transports/http.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke": "tsx src/scripts/smoke.ts"
  },
  "dependencies": {
    "@autopilot/contracts": "workspace:*",
    "@jobforge/errors": "workspace:*",
    "@jobforge/fetch": "workspace:*",
    "@jobforge/sdk-ts": "workspace:*",
    "@jobforge/shared": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jobforge/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
