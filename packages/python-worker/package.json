{
  "name": "@jobforge/python-worker",
  "version": "0.1.0",
  "private": true,
  "description": "Python worker framework for JobForge",
  "scripts": {
    "test": "pytest -v",
    "lint": "ruff check src tests examples",
    "typecheck": "mypy src",
    "format": "ruff format src tests examples",
    "format:check": "ruff format --check src tests examples",
    "verify:fast": "npm run format:check && npm run lint && npm run typecheck",
    "verify:full": "npm run verify:fast && npm run test",
    "clean": "rimraf build dist *.egg-info .pytest_cache .mypy_cache .ruff_cache"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  }
}
