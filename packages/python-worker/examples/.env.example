# Example environment configuration for Python worker

# Required: PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/jobforge

# Required: Unique worker identifier
WORKER_ID=worker-python-01

# Required: JobForge API base URL
API_BASE_URL=http://localhost:3000

# Optional: Polling configuration
POLL_INTERVAL_SECONDS=5
MAX_CONCURRENT_JOBS=5

# Optional: Timeouts
JOB_TIMEOUT_SECONDS=300
RPC_TIMEOUT_SECONDS=30

# Optional: Environment
ENVIRONMENT=development
