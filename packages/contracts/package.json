{
  "name": "@autopilot/contracts",
  "version": "0.1.0",
  "private": true,
  "description": "Canonical contract schemas for Autopilot and JobForge",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm -w tsc -p packages/contracts/tsconfig.json",
    "dev": "pnpm -w tsc --watch -p packages/contracts/tsconfig.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "pnpm -w tsc --noEmit -p packages/contracts/tsconfig.json"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jobforge/typescript-config": "workspace:*",
    "@types/node": "^20.11.0"
  }
}
